html 
  head
    meta(charset="utf-8")
  body
    h1
      a(href="/topic") Server Side JavaScript
    ul 
      each topic in topics
        li
          a(href="/topic/"+topic.id)= topic.title
    form(action="/topic/"+topic+"/edit" method="post")
      p
        input(type="text" name="title" placeholder=data[0].title)
      p 
        textarea(name="description" placeholder=data[0].description) 
      p 
        input(type="submit")

    a(href="/topic/new") new